<!-- login-modal -->
<div id="modal-login" class="modal fade">
  <div class="modal-out">
    <div class="modal-dialog">
      <div class="modal-content">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <div class="modal-header">
          <h4 class="modal-title"><%= image_tag ( "homepage/logo-86x85.png") %></h4>
          <div class="h1-top-style">Login Your Parrot Account</div>
        </div>
        <div class="modal-body">
          <form>
            <div class="form-group">
              <input type="email" class="form-control" id="InputEmail1" aria-describedby="emailHelp" placeholder="Email">
            </div>
            <div class="form-group">

              <input type="password" class="form-control" id="InputPassword1" placeholder="Password">
            </div>
          </form>

          <span id="login_error_msg" style="color:red;"></span>
          <br />

          <div class="forgot">
            <a href="#modal-forgot-email" data-toggle="modal" class="modal-activate">Forgot Email?</a>
            <a href="#modal-forgot-pass" data-toggle="modal" class="modal-activate">Forgot Password?</a>
          </div>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-color" id="login_submit">Welcome Back!</button>
          <span class="new-user forgot">  <%=
              #link_to new_user_registration_path do f
              link_to new_user_path do
              %>
            New User?
            <% end %></span>
        </div>
      </div>
    </div>
  </div>
</div>
